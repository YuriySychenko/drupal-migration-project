{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}
<ul{{ attributes.removeClass('pager').addClass('infinite-scroll') }}>
  <li class="pager__item">
    <a class="button btn__more btn__more-default" href="{{ items.next.href }}" title="{{ 'Load more items'|t }}" rel="next">{{ options.button_text }}</a>
  </li>
</ul>
{% endif %}
