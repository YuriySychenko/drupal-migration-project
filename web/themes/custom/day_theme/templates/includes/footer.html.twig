{% set language_without_uk = language != 'uk' ? '/' ~ language : '' %}

<footer class="footer">
  <div class="wrapper">
    <div class="footer__box">
      <div class="footer__copyright">
        <div>
          <div class="footer__logo-wrap">
            <img src="/themes/custom/day_theme/assets/imgs/logo-white.svg" alt="Газета &quot;День&quot;" width="92" height="46">
            <a class="header__link _mob-visible" href="https://old.day.kyiv.ua/{{ language }}/peredplata">{{ 'Subscribe'|t }}</a>
          </div>

          {{ drupal_entity('block', 'footertextandcopyright', check_access=false) }}

        </div>
      </div>
      <div class="footer__links">
        <div class="footer__col">
          <h2>{{ 'Editorial office'|t }}</h2>
          <ul>
            <li>
              <a href="#">{{ 'Contacts'|t }}</a>
            </li>
            <li>
              <a href="#">{{ 'Editor in Chief'|t }}</a>
            </li>
            <li>
              <a href="#">{{ 'Vacancies'|t }}</a>
            </li>
            <li>
              <a href="#">{{ 'Advertising'|t }}</a>
            </li>
            <li>
              <a href="#"> Проекти/ініціатива </a>
            </li>
          </ul>
        </div>
        <div class="footer__col">
          <h2>{{ 'Newspaper'|t }}</h2>
          <ul>
            <li>
              <a href="https://old.day.kyiv.ua/{{ language }}/peredplata">{{ 'Subscription'|t }}</a>
            </li>
            <li>
              <a href="{{ language_without_uk }}/newspaper">{{ 'Articles'|t }}</a>
            </li>
            <li>
              <a href="{{ language_without_uk }}/newspapers-archive">{{ 'Archive'|t }}</a>
            </li>
            <li>
              <a href="#">{{ 'Shop'|t }}</a>
            </li>
            <li>
              <a href="#"> Фонд “Дня” </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="footer__socials">
      <ul>
        <li>
          <a href="http://www.facebook.com/thedaynewspaper" rel="nofollow" target="_blank">
            <svg class="icon icon-facebook">
              <use xlink:href="/themes/custom/day_theme/assets/imgs/sprite.svg#icon-facebook"></use>
            </svg>
          </a>
        </li>
        <li>
          <a href="http://www.twitter.com/thedaynewspaper" rel="nofollow" target="_blank">
            <svg class="icon icon-twitter">
              <use xlink:href="/themes/custom/day_theme/assets/imgs/sprite.svg#icon-twitter"></use>
            </svg>
          </a>
        </li>
        <li>
          <a href="#" rel="nofollow" target="_blank">
            <svg class="icon icon-instagram">
              <use xlink:href="/themes/custom/day_theme/assets/imgs/sprite.svg#icon-instagram"></use>
            </svg>
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>
